{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "ireact-material": ["components/index.tsx"],
      "ireact-material/es/*": ["components/*"],
      "ireact-material/lib/*": ["components/*"]
    },
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "stripInternal": true
  },
  "exclude": ["node_modules", "lib", "es"]
}
